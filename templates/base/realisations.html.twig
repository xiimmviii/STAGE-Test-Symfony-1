{% extends 'base.html.twig' %}

{% block content %}
<section class="mt-5 mb-5 mainbox text-center">




    <div class="row justify-content-center">

        {# On génère ici une boucle pour afficher les photos des réalisations présentes dans la BDD#}
        {% for galerie in galeries %}
        {% set modal = 'modal' %}
        {# La partie modale permet l'affichage en grand sur l'écran de la photo sur laquelle on a cliqué #}
        <div class="col-md-3">
        {% for picture in galerie.pictures | slice (0,1) %}
            <img class="img-thumbnail" data-toggle="modal" data-target="#{{ modal ~ galerie.id }}"
                src="{{ vich_uploader_asset(picture, 'imageFile') }}" alt="">
        {% endfor %}


            {# L'appel de la modal est dynamique, ce qui permet que tous les éléments correspondent entre eux : ID, description #}
            <div class="modal fade" id="{{ modal ~ galerie.id }}" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <table>
                            <tr>
                                {% for picture in galerie.pictures %}
            <img class="img-thumbnail" data-toggle="modal" data-target="#{{ modal ~ galerie.id }}"
                src="{{ vich_uploader_asset(picture, 'imageFile')}}" alt="">
        {% endfor %}
                            </tr>
                            
                            {% if galerie.description is not null  %} <tr>

                                <div class="bg-dark text-white p-3">{{galerie.description}}</div>

                            </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}


    </div>

</section>
{% endblock %}