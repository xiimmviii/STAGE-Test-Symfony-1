{% extends 'base.html.twig' %}

{% block content %}


    <div class="col-md-6 col-sm-10 col-xs-10 mx-auto m-5 p-3" id="">
        {{form_start(form)}}

        <div class="row">
            <div class="col-6">
                {{ form_row(form.prenom, {'label': 'Prénom'})  }}
                {{ form_row(form.nom, {'label': 'Nom'}) }}
                {{ form_row(form.societe, {'label': 'Société'}) }}
            </div>

            <div class="col-6">
                {{ form_row(form.telephone, {'label': 'N° de téléphone'}) }}
                {{ form_row(form.email, {'label': 'Email'}) }}
                {{ form_row(form.objet, {'label': 'Objet'}) }}

            </div>
        </div>

        <div class="row">
           <div class="col-12"> {{ form_row(form.message, {'label': 'Message'}) }} </div>
        </div>
<div class="form-group text-center">
                    <button class="btn btn-info col-6" type="submit" action="">Envoyer !</button>
                </div>
        {{form_end(form)}}
    </div>


{% endblock %}
