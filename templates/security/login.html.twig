{% extends 'base.html.twig' %}

{% block content %}
<h1 class="col-md-6 mx-auto">Connexion</h1>


<form method="post" action="{{ path('connexion_check') }}" class="col-md-6 mx-auto">

    <div class="form-group">
        <input type="text" class="form-control" name="_username" value="{{ lastUsername }}" placeholder="adresse mail" />
    </div>

    <div class="form-group">
        <input type="password" class="form-control" name="_password" placeholder="Mot de passe" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Connexion" />
    </div>
    
</form>

{% endblock %}