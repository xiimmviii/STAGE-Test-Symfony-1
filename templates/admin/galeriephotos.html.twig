{% extends 'base.html.twig' %}

{% block content %}
{{ include('./admin/navbaradmin.html.twig') }}

<div class="row mt-4 pt-4">
    <div class="col-10 mx-auto border border-info rounded p-3">
        <h2> Galerie de vos r√©alisations </h2>
        <hr>
        <p> Description </p>
    </div>
</div>

<div class="row m-4 justify-content-center">
    <div class="col-lg-4 col-md-3 col-sm-10 alert-warning m-3 order-md-5 order-lg-5 "> BLOC DE DOCUMENTATION </div>

    <div class="col-lg-6 col-md-8 col-sm-10 alert-info m-3 order-md-0 order-lg-0 "> BLOC DE MODIF
        <h1>Ajout de photo</h1>
        {{ form_start(galerieForm) }}
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(galerieForm.file) }}
                {{ form_row(galerieForm.description) }}
                {{ form_row(galerieForm.submit, { 'label' : 'Envoyer' } ) }}
            </div>
        </div>
        {{ form_end(galerieForm) }}



    </div>
</div>

<div class="row m-4 justify-content-center">

    <h1>Gestion des photos</h1>

    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="row">
                {% for photo in photos %}
                <div class="card col-md-2 m-2 card-admin1">
                    <div class="row">
                        <img class="col mx-auto mt-2" src="{{ asset('/photo/' ~ photo.photo) }}"
                            alt="{{ photo.description }}">
                    </div>
                    <hr>
                    <div class="row">
                        <p class="text-center">{{ photo.description }}</p>
                    </div>
                    <hr>
                    <div class="row">
                        <!-- <a  type="button" class="btn btn-danger w-100" href="{{ path('delete_photo', {id : photo.id } ) }}"
                            onclick="return confirm('Etes-vous certain(e) de vouloir supprimer la photo ?')">
                            <i class="fas fa-trash-alt mx-2"></i> Supprimer
                        </a> -->
                        <div class="col-md-12 bg-danger bas-card-admin1">
                            <a class="text-decoration-none text-light"
                                href="{{ path('delete_photo', {id : photo.id } ) }}"
                                onclick="return confirm('Etes-vous certain(e) de vouloir supprimer la photo ?')">
                                <i class="fas fa-trash-alt mx-2"></i> Supprimer
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="table table-striped">

        <table cellpadding="0" cellspacing="0" border="0" class="col-9 mx-auto">
            <thead>
                <tr class="row">
                    <th class="col-md-6 text-center">Photo</th>
                    <th class="col-md-4 text-center">Description</th>
                    <th class="col-md-2 text-center">Supprimer</th>
                </tr>
            </thead>
            <tbody>

                {% for photo in photos %}
                <tr class="row">
                    <td class="col-md-6 text-center"><img src="{{ asset('/photo/' ~ photo.photo) }}"
                            alt="{{ photo.description }}" class="img-thumbnail w-25"></img></td>
                    <td class="col-md-4 text-center">
                        {{ photo.description }}
                    </td>
                    <td class="col-md-2 text-center">
                        <a href="{{ path('delete_photo', {id : photo.id } ) }}"
                            onclick="return confirm('Etes-vous certain(e) de vouloir supprimer la photo ?')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>


</div>

{% endblock %}