{% extends 'base.html.twig' %}

{% block content %}
    {{ include('./admin/navbaradmin.html.twig') }}

    <div class="row mt-4 pt-4">
        <div class="col-10 mx-auto border border-info rounded p-3">
            <h2>
                Galerie de vos r√©alisations
            </h2>
            <hr>
            <p>
                Description
            </p>
        </div>
    </div>

    <div class="row m-4 justify-content-center">
        <div class="col-lg-4 col-md-3 col-sm-10 alert-warning m-3 order-md-5 order-lg-5 ">
            BLOC DE DOCUMENTATION
        </div>

        <div class="col-lg-6 col-md-8 col-sm-10 alert-info m-3 order-md-0 order-lg-0 ">
            BLOC DE MODIF
            <h1>Ajout de photo</h1>
            {{ form_start(galerieForm) }}
            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(galerieForm.file) }}
                    {{ form_row(galerieForm.description) }}
                    {{ form_row(galerieForm.submit, { 'label' : 'Envoyer' } ) }}
                </div>
            </div>
            {{ form_end(galerieForm) }}


        </div>
    </div>

    <div class="row m-4 justify-content-center">

        <h1>Gestion des photos</h1>

        <div class="row">
            <div class="col-md-10 mx-auto text-center">
                <div class="row text-center">
                    {% for photo in photos %}
                        <div class="card col-md-2 m-3">
                            <img class=" card-img-top" src="{{ asset('/photo/' ~ photo.photo) }}" alt="{{ photo.description }}">
                            <div class=" card-block">
                                {{ photo.description }}
                            </div>
                            <div class="card-footer bg-danger">
                                <a class="text-decoration-none text-light" href="{{ path('delete_photo', {id : photo.id } ) }}" onclick="return confirm('Etes-vous certain(e) de vouloir supprimer la photo ?')">
                                    <i class="fas fa-trash-alt mx-2"></i> Supprimer
                                </a>
                            </div>

                        </div>
                    {% endfor %}

  </div>
    </div>
      </div>
        </div>


{% endblock %}
