<section class="bg2 pb-5">
    {# <svg version="1.1" id="bottomlight" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
        x="0px" y="0px" viewbox="0 0 1920 132.013" enable-background="new 0 0 1920 132.013" xml:space="preserve">
        <polygon id="XMLID_250_" points="1920,82.188 951,82.188 988.341,40.188 0,40.188 0,104.188 1920,104.188 " />
    </svg> #}

    {{ svgBottomC.code | raw}}

    <div class="row my-4">
        <div class="col-10 mx-auto text-center h1">
            Prenons Contact
        </div>
    </div>
    <div class="row my-5 py-5 justify-content-around">
        <div class="col-10 col-md-3 text-center">
            <h1>
                <i class="fas fa-phone"></i>
            </h1>
            <a class="h4 btn bg" href="telto:+{{entreprise.telephone}}" alt="Numéro de téléphone">
                <div class="boutontext">Appeler </div>
            </a>
        </div>
        <div class="col-10 col-md-3 text-center">
            <h1>
                <i class="far fa-envelope"></i>
            </h1>
            <a class="h4 btn bg" href="mailto:{{entreprise.mailContact}}" alt="Numéro de téléphone">
                <div class="boutontext">Envoyer un mail</div>
            </a>
        </div>
        <div class="col-10 col-md-3 text-center">
            <h1>
                <i class="fas fa-euro-sign"></i>
            </h1>
            <a class="h4 btn bg" href="mailto:{{entreprise.mailGerant}}" alt="Numéro de téléphone">
                <div class="boutontext">
                    Demander un devis
                </div>
            </a>
        </div>
    </div>

    <div class="row p-3 pb-5 mb-2">
        <div class="col-10 mx-auto text-center h3">
            Votre artisan se déplace dans les secteurs suivants :
        </div>
    </div>

    <div class="row justify-content-center h5 mb-4">
        {% for localisation in localisations | slice(0,5) %}
        <div class="col-6 col-md-2 text-left">
           <i class="fas fa-map-marker-alt"></i> {{localisation.secteur}}
        </div>
        {% endfor %}
    </div>

    <div class="row justify-content-center h5 mb-4">
        {% for localisation in localisations | slice(5,10) %}
        <div class="col-6 col-md-2 text-center">
         <i class="fas fa-map-marker-alt"></i>   {{localisation.secteur}}
        </div>
        {% endfor %}
    </div>

</section>