{% extends 'admin/baseadmin.html.twig' %}

{% block content %}

<div class="row mt-5 pt-5">
<div class="col-8 mx-auto"><h1>
                       Couleurs 
                    </h1></div></div>

    <div class="row p-3 justify-content-center">
        <div class="col-lg-4 col-md-3 col-sm-10 m-3 p-3 order-md-5 order-lg-5 text-justify">
            <table class="table">
                <tr class="row mt-3">
                    <th class="col-6 text-center">
                        COULEUR
                    </th>

                    <th class="col-6 text-center">
                        PUBLIER</th>
                </tr>

                <!-- Pour afficher en premier le texte affiché, on ordonne nos résultats de notre boucle for par la date d'affichage en DESC. Pour cela on utilise l'extension twig sortbyfield : https://github.com/victorhaggqvist/Twig-sort-by-field/blob/master/src/SortByFieldExtension.php 
                                                On break le for et on récupère que le premier de la liste pour mettre un design spécial-->
                {% for svgtransi in svgtransis | sortbyfield('dateAffichage') | slice(0, 1) %}
                    <tr class="row alert-success">
                        <td class="col-6 text-center">
                            {{svgtransi.categorie}}
                        </td>
                        <td class="col-6 text-center">
                            Thème utilisé
                        </td>
                    </tr>
                {% endfor %}
                {% for svgtransi in svgtransis| sortbyfield('dateAffichage') |slice(1, 50) %}
                    <!-- On récupère le reste des textes et on les affiche à la suite dans le tableau -->
                    <tr class="row">
                        <td class="col-6 text-center">
                            {{svgtransi.categorie}}
                        </td>


                        <td class="col-6 text-center">
                            <a class="text-success h3" href="{{ path('changer-svg-transi', {id : svgtransi.id} ) }}">
                                <i class="fas fa-upload"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-lg-6 col-md-8 col-sm-10 rounded m-3 p-3 order-md-0 order-lg-0 ">
            <div class="row m-3 p-3">
                <div class="col-12 alert-info border border-info rounded p-3">
                    <center><p>
                        Ici, vous pouvez changer la couleur du thème.
                    </p></center>
                </div>
            </div>

            <div class="row m-3">
                <div class="col-12 alert-info border border-info rounded">

                    {{ form_start(DesignForm) }}

                    <h3 class="text-center m-4">Pack de svg choisi :
                        <br></h3>
                    <h2 class="m-4 text-center">
                        {{design.categorie}}</h2>
                    <div style="display: none;">
                        {{ form_label(DesignForm.categorie) }}
                        {{ form_widget(DesignForm.categorie) }}
                        {{ form_label(DesignForm.bottom_trs_w) }}
                        {{ form_widget(DesignForm.bottom_trs_w) }}
                        {{ form_label(DesignForm.bottom_trs_c) }}
                        {{ form_widget(DesignForm.bottom_trs_c) }}
                        {{ form_label(DesignForm.top_trs_w) }}
                        {{ form_widget(DesignForm.top_trs_w) }}
                        {{ form_label(DesignForm.top_trs_c) }}
                        {{ form_widget(DesignForm.top_trs_c) }}
                        {{ form_label(DesignForm.soustitre_icon_w) }}
                        {{ form_widget(DesignForm.soustitre_icon_w) }}
                        {{ form_label(DesignForm.soustitre_icon_c) }}
                        {{ form_widget(DesignForm.soustitre_icon_c) }}

                        {{ form_label(DesignForm.dateAffichage) }}
                        {{ form_widget(DesignForm.dateAffichage, {'value': date}) }}
                    </div>

                    {{ form_row(DesignForm.submit, { 'label' : boutonenvoi, 'attr': {'class': 'col-12 btn btn-outline-success'} } ) }}

                    {{ form_end(DesignForm) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
